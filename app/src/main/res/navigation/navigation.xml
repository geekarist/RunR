<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/startRunFragment">

    <fragment
        android:id="@+id/startRunFragment"
        android:name="me.cpele.runr.infra.view.StartRunFragment"
        android:label="start_run_fragment"
        tools:layout="@layout/start_run_fragment">
        <action
            android:id="@+id/action_startRunFragment_to_runningFragment"
            app:destination="@id/runningFragment" />
    </fragment>
    <fragment
        android:id="@+id/runningFragment"
        android:name="me.cpele.runr.infra.view.RunningFragment"
        android:label="fragment_running"
        tools:layout="@layout/fragment_running" />
</navigation>